generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String   @id @default(uuid())
  userId      String
  type        String   // 'terrain' | 'road'
  status      String   // 'queued' | 'processing' | 'completed' | 'failed'
  inputParams Json
  result      Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  terrain     Terrain?
  road        Road?

  @@index([userId])
  @@index([status])
}

model Terrain {
  id            String   @id @default(uuid())
  jobId         String   @unique
  job           Job      @relation(fields: [jobId], references: [id])
  userId        String
  description   String?  @db.Text
  blendFilePath String
  topViewPath   String
  metadata      Json?
  createdAt     DateTime @default(now())
  roads         Road[]

  @@index([userId])
}

model Road {
  id            String   @id @default(uuid())
  jobId         String   @unique
  job           Job      @relation(fields: [jobId], references: [id])
  terrainId     String
  terrain       Terrain  @relation(fields: [terrainId], references: [id])
  userId        String
  controlPoints Json
  blendFilePath String
  previewPath   String?
  widthMeters   Float    @default(1.6)
  metadata      Json?
  createdAt     DateTime @default(now())

  @@index([terrainId])
  @@index([userId])
}
